<Window x:Class="Project_Prn.PoliceWindow.AssignTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Prn.PoliceWindow"
        mc:Ignorable="d"
        Title="AssignTeacherWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Phân công giáo viên vào khóa học"
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Chọn khóa học:"/>
            <ComboBox x:Name="cbClass" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Chọn giáo viên:"/>
            <ComboBox x:Name="cbTeacher" Height="30" Margin="0,0,0,20"/>

            <Button Content="Phân công"
                    Height="35" Background="Green" Foreground="White"
                    Click="Assign_Click"/>
        </StackPanel>
    </Grid>
</Window>
