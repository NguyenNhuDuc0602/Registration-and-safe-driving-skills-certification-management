<Window x:Class="Project_Prn.PoliceWindow.AssignSupervisorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Prn.PoliceWindow"
        mc:Ignorable="d"
        Title="AssignSupervisorWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Phân công giám thị kỳ thi"
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Chọn kỳ thi:"/>
            <ComboBox x:Name="cbExam" Height="30" Margin="0,0,0,10"/>

            <TextBlock Text="Chọn giáo viên làm giám thị:"/>
            <ComboBox x:Name="cbSupervisor" Height="30" Margin="0,0,0,20"/>

            <Button Content="Phân công"
                    Height="35" Background="DarkBlue" Foreground="White"
                    Click="Assign_Click"/>
        </StackPanel>
    </Grid>
</Window>
