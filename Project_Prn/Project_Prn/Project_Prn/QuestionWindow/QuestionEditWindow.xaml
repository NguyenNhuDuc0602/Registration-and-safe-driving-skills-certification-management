<Window x:Class="Project_Prn.QuestionWindow.QuestionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Question" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Exam" />
            <ComboBox x:Name="cbExams" DisplayMemberPath="Name" SelectedValuePath="ExamId" />

            <TextBlock Text="Content" />
            <TextBox x:Name="txtContent"/>

            <TextBlock Text="Option A" />
            <TextBox x:Name="txtA"/>

            <TextBlock Text="Option B" />
            <TextBox x:Name="txtB"/>

            <TextBlock Text="Option C" />
            <TextBox x:Name="txtC"/>

            <TextBlock Text="Option D" />
            <TextBox x:Name="txtD"/>

            <TextBlock Text="Correct Answer (A/B/C/D)" />
            <TextBox x:Name="txtCorrect"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Margin="5" Click="btnSave_Click"/>
                <Button Content="Cancel" Width="80" Margin="5" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
