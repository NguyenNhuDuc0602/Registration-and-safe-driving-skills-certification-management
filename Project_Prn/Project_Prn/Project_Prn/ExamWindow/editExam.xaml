<Window x:Class="Project_Prn.ExamWindow.editExam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Prn.UserWindow"
        mc:Ignorable="d"
        Title="editExam" Height="264" Width="442">
    <Grid Margin="0,0,0,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Center"    >
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="course :" Width="80" />
                <ComboBox x:Name="cbxCourse" Width="200">

                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" >
                <Label Content="date :" Width="80" />
                <DatePicker x:Name="dpdate" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Label Content="phong thi :" Width="80"/>
                <TextBox x:Name="txtClass"  Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="5">
                <Button x:Name="btnSave" Content="Save" Width="116" Margin="5" Height="31" Click="btnSave_Click"   />
                <Button x:Name="btnCancel" Content="Cancel" Width="100" Height="31" Click="btnCancel_Click"   />
            </StackPanel>

        </StackPanel>

    </Grid>

</Window>
