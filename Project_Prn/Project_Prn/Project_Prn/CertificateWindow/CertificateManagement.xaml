<Window x:Class="Project_Prn.CertificateWindow.CertificateManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Prn.CertificateWindow"
        mc:Ignorable="d"
        Title="CertificateManagement" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#e0e0ff" Padding="10" CornerRadius="10" Margin="0,0,0,10">
            <TextBlock Text="CERTIFICATE MANAGEMENT"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="DarkBlue"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"/>
        </Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Top" Width="Auto">
            <StackPanel Width="300" Margin="0,0,30,0">
                <TextBlock Text="CertificateID:"/>
                <TextBox x:Name="txtCertificateID"/>

                <TextBlock Text="UserID:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtUserID"/>

                <TextBlock Text="IssuedDate:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtIssuedDate"/>
            </StackPanel>
            <StackPanel Width="300">
                <TextBlock Text="ExpirationDate:"/>
                <TextBox x:Name="txtExpirationDate"/>
                <TextBlock Text="CertificateCode:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtCertificateCode"/>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,20,0,0">
                    <Button Content="Add" Height="35" Width="50" Margin="5"/>
                    <Button Content="Update" Height="35" Width="50" Margin="5"/>
                    <Button Content="Delete" Height="35"  Width="50" Margin="5" />
                    <Button Content="Detail" Height="35"  Width="50"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <DataGrid x:Name="dgCertificates" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CerID" Binding="{Binding CertificateId}" Width="50"/>
                <DataGridTextColumn Header="UserName" Binding="{Binding User.FullName}" Width="*"/>
                <DataGridTextColumn Header="IssuedDate" Binding="{Binding IssuedDate}" Width="2*"/>
                <DataGridTextColumn Header="ExpirationDate" Binding="{Binding ExpirationDate}" Width="2*"/>
                <DataGridTextColumn Header="CertificateCode" Binding="{Binding CertificateCode}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
